global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend segzydevelopment-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/segzydevelopment.tech.pem
	http-request redirect scheme https code 301 unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend segzydevelopment-tech-backend

backend segzydevelopment-tech-backend
	balance roundrobin
	server 142533-web-01 34.229.67.42:80 check
	server 142533-web-02 52.86.76.59:80 check
